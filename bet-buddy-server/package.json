{
  "name": "bet-buddy-server",
  "version": "1.0.0",
  "description": "Backend API for Bet Buddy application",
  "main": "functions/index.js",
  "scripts": {
    "start": "node functions/index.js",
    "dev": "nodemon functions/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "deploy": "firebase deploy --only functions",
    "serve": "firebase emulators:start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^2.0.22",
    "eslint": "^8.40.0"
  },
  "optionalDependencies": {
    "firebase-admin": "^11.9.0",
    "firebase-functions": "^4.3.1",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "stripe": "^12.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "functions/**/*.js",
      "models/**/*.js",
      "utils/**/*.js",
      "!functions/index.js",
      "!**/node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "private": true
}
