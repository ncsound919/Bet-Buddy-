{
  "name": "bet-buddy",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "description": "Learn from your own bets - A fast, learning-focused bet improvement app",
  "private": true,
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "build:all": "npm run build:backend && npm run build:frontend",
    "lint:backend": "npm run lint --prefix backend",
    "lint:frontend": "npm run lint --prefix frontend",
    "lint:all": "npm run lint:backend && npm run lint:frontend"
  },
  "keywords": [
    "betting",
    "tracking",
    "accessible",
    "a11y",
    "sports",
    "analytics",
    "learning",
    "insights",
    "typescript",
    "react",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "expo": "^50.0.0",
    "expo-status-bar": "~1.11.1",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-web": "~0.19.6",
    "react-native-paper": "^5.12.3",
    "react-native-vector-icons": "^10.0.3",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-screens": "~3.29.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "firebase": "^10.7.1",
    "@react-native-firebase/app": "^19.0.1",
    "@react-native-firebase/auth": "^19.0.1",
    "@react-native-firebase/firestore": "^19.0.1",
    "@react-native-firebase/storage": "^19.0.1",
    "@react-native-firebase/functions": "^19.0.1",
    "@react-native-google-signin/google-signin": "^11.0.0",
    "@stripe/stripe-react-native": "^0.35.1",
    "expo-image-picker": "~14.7.1",
    "expo-document-picker": "~11.10.1",
    "date-fns": "^3.0.6",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "14.1.0",
    "zustand": "^4.4.7",
    "@tanstack/react-query": "^5.17.9",
    "@react-native-picker/picker": "^2.6.1",
    "styled-components": "^6.1.1",
    "prop-types": "^15.8.1",
    "axe-core": "^4.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@testing-library/react-native": "^12.4.2",
    "@testing-library/jest-native": "^5.4.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ]
  }
}
